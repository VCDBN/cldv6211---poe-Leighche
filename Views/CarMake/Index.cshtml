@model IEnumerable<THERIDEURENT1.models.CarMake>

@{
    ViewData["Title"] = "Vehicle Make";
}

<h1>Vehicle Make 🚗</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CarMakeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CarMakeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CarMakeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
